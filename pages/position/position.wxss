.park-info {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    width: 252rpx;
    border-radius: 15px;
    background-color: rgba(255, 255, 255, 100);
    padding: 0 5rpx;
}

.park-info-text {
    color: rgba(255, 138, 65, 100);
    font-size: 14px;
    margin-left: -24rpx;
}

.fingerprint {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    position: fixed;
    top: 580rpx;
    width: 286rpx;
    height: 284rpx;
    left: 0;
    right: 0;
    margin: 0 auto;
    line-height: 20px;
    opacity: 0.7;
    border-radius: 15px;
    background-color: rgba(164, 156, 156, 100);
    text-align: center;
}

.fingerprint-text {
    margin-top: 18rpx;
    color: rgba(0, 0, 0, 1);
    font-size: 28rpx;
}

.bg-image {
    position: absolute;
    left: 0;
    top: 220rpx;
    width: 100%;
}

.bg-opacity {
    background-color: rgba(255, 255, 255, 0.5);
}

.position-switch {
    height: 252rpx;
    width: 100%;
    line-height: 40rpx;
    border-radius: 40rpx;
    background-color: rgba(251, 251, 251, 100);
    color: rgba(16, 16, 16, 100);
    font-size: 28rpx;
}

.line {
    border: 2rpx solid rgba(187, 187, 187, 100);
}

.position-choose {
    display: inline-block;
    margin-left: 40rpx;
    height: 52rpx;
    color: rgba(164, 156, 156, 100);
    font-size: 36rpx;
    text-align: left;
}

.position-now {
    display: inline-block;
    margin-left: 40rpx;
    height: 52rpx;
    color: rgba(0, 0, 0, 1);
    font-size: 36rpx;
    text-align: left;
}

.circular {
    display: inline-block;
    height: 70rpx;
    width: 70rpx;
    border-radius: 50%;
}

.color-red {
    background-color: rgba(213, 94, 94, 100);
}

.color-blue {
    background-color: rgba(71, 139, 200, 100);
}

