<!-- tabbar -->
<ui-sys	tabbar>

<!-- navbar -->
<view class="navbar">
  <image class="bell" src="data:image/svg+xml;base64,"></image>
  <text class="hint_1">消息中心</text>
</view>

<!-- 消息合集 -->
<view class="list">
  <view class="info" wx:for="{{active_list.length}}" wx:key="index">
    <view class="info_image_border" style="background-color:{{active_list[index].background_color}};">
      <image class="info_image" src="{{active_list[index].image}}"></image>
    </view>
    <text class="hint_image">{{active_list[index].name}}</text>
    <text class="hint_time">{{active_list[index].time}}</text>
    <text class="hint_active">{{active_list[index].ad}}</text>
    <view class="underline"></view>
  </view>
</view>

</ui-sys>
