  background-image: url("https://cdn.jsdelivr.net/gh/Rewriterl/warm-heart@master/assets/bg.jpg");
}

.back{
  position: absolute;
  width: 50rpx;
  height: 50rpx;
  top: 50%;
  left: 20rpx;
}

.hint_1{
  position: absolute;
  width: 200rpx;
  height: 70rpx;
  top: 50%;
  left: 40%;
