    src: url('//at.alicdn.com/t/font_2687084_pucuci1hvt.woff2?t=1646543012942') format('woff2'),
    url('//at.alicdn.com/t/font_2687084_pucuci1hvt.woff?t=1646543012942') format('woff'),
    url('//at.alicdn.com/t/font_2687084_pucuci1hvt.ttf?t=1646543012942') format('truetype');
}

.iconfont {
    font-family: "iconfont" !important;
    font-size: 16px;
    font-style: normal;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
}

.icon-money:before {
    content: "\e630";
}

.icon-share-poster:before {
    content: "\e629";
}

.icon-share-friend:before {
    content: "\e62a";
}

ad {
    border-radius: var(--radius);
}

image {
    border-radius: var(--radius);
}

.ui-BG-card {
    margin: 24rpx;
    padding: 24rpx;
    border-radius: var(--radius);
    box-shadow: rgba(12, 12, 12, 0.03) 0px 2px 15px -5px;

}

.menu-block {
    height: 220rpx;
}

.header-arrow {
    position: fixed;
    left: 28rpx;
    top: 60rpx;
    width: 42rpx;
    height: 42rpx;
}

.menu-block {
    height: 220rpx;
}

.menu-list {
    display: flex;
    flex-direction: row;
    justify-content: space-around;
    align-items: center;
}

.menu-item {
    color: rgba(16, 16, 16, 100);
    font-size: 36rpx;
    font-weight: lighter;
}

.menu-all {
    color: rgba(0, 0, 0, 1);
    font-size: 36rpx;
}

.menu-warn {
    color: rgba(242, 62, 62, 100);
    font-size: 36rpx;
}

